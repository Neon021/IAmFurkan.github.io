@using My3rdBlog.ViewModels
@model LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{

}
<body id="login">
    <div class="form-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
                    <div class="form-container">
                        <form class="form-horizontal" asp-controller="Auth" asp-action="Login">
                            <h3 class="title">Login or Sign-Up</h3>
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Enter your Username" asp-for="UserName">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Enter your Password" asp-for="Password">
                            </div>
                            <input class="btn signin" type="submit" value="Login"/>
                            <a class="signup" asp-controller="Auth" asp-action="Register">Sign-Up</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>